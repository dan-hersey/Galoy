  <!-- Key Benefits -->
  <section class="section">
    <div class="container">
      <h2 class="text-center mb-12">Why Start with Primary Core?</h2>

      <div class="grid grid-2" style="gap: var(--space-12);">
        <div>
          <div style="display: flex; align-items: flex-start; gap: var(--space-4); margin-bottom: var(--space-8);">
