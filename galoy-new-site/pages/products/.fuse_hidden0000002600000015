  <!-- Security -->
  <section class="section">
    <div class="container">
      <div class="text-center mb-12">
        <h2>Security First Design</h2>
        <p class="text-lg">Bitcoin payment security is non-negotiable. Bria is built with institutional security requirements in mind.</p>
      </div>

      <div class="grid grid-2" style="gap: var(--space-8);">
        <div class="card" style="padding: var(--space-8);">
          <h3>Key Management</h3>
          <ul style="margin: 0; padding-left: var(--space-6);">
            <li style="margin-bottom: var(--space-3);">Multi-signature wallet configurations (2-of-3, 3-of-5, etc.)</li>
            <li style="margin-bottom: var(--space-3);">Hardware signing device integration (Ledger, Trezor, etc.)</li>
            <li style="margin-bottom: var(--space-3);">Segregated hot/warm/cold wallet architectures</li>
            <li>BIP-39/BIP-44 standard compliance</li>
          </ul>
        </div>

        <div class="card" style="padding: var(--space-8);">
          <h3>Access Control</h3>
          <ul style="margin: 0; padding-left: var(--space-6);">
            <li style="margin-bottom: var(--space-3);">Role-based access control (RBAC)</li>
            <li style="margin-bottom: var(--space-3);">API key management with scoped permissions</li>
            <li style="margin-bottom: var(--space-3);">Approval workflows for large transactions</li>
            <li>Complete audit logging of all actions</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

