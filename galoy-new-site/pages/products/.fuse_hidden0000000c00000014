  <!-- Key Features -->
  <section class="section section-alt">
    <div class="container">
      <div class="text-center mb-12">
        <h2>Payment Processing Features</h2>
        <p class="text-lg">Everything you need for production Bitcoin payment operations</p>
      </div>

      <div class="grid grid-3">
        <div class="card">
          <div class="card-icon" style="background: var(--color-accent);">
            <i data-lucide="circle"></i>
          </div>
          <h3>Lightning Network</h3>
          <p class="mb-0">Native Lightning support for instant, low-cost payments. Automatic channel management and routing optimization.</p>
        </div>

        <div class="card">
          <div class="card-icon" style="background: var(--color-accent);">
            <i data-lucide="circle"></i>
          </div>
          <h3>On-Chain Bitcoin</h3>
          <p class="mb-0">Full on-chain transaction support with UTXO management, fee estimation, and RBF (Replace-By-Fee) capabilities.</p>
        </div>

        <div class="card">
          <div class="card-icon" style="background: var(--color-accent);">
            <i data-lucide="circle"></i>
          </div>
          <h3>Multi-Signature</h3>
          <p class="mb-0">Support for multi-sig configurations with hardware signing devices for institutional-grade key management.</p>
        </div>

        <div class="card">
          <div class="card-icon" style="background: var(--color-accent);">
            <i data-lucide="circle"></i>
          </div>
          <h3>Batch Payouts</h3>
          <p class="mb-0">Efficient batch processing for high-volume payout operations. Reduce fees with transaction batching.</p>
        </div>

        <div class="card">
          <div class="card-icon" style="background: var(--color-accent);">
            <i data-lucide="circle"></i>
          </div>
          <h3>Webhooks & Events</h3>
          <p class="mb-0">Real-time notifications for payment status changes. Integrate with your existing systems via webhooks.</p>
        </div>

        <div class="card">
          <div class="card-icon" style="background: var(--color-accent);">
            <i data-lucide="circle"></i>
          </div>
          <h3>Reporting & Analytics</h3>
          <p class="mb-0">Comprehensive reporting on payment volumes, fees, and transaction status for reconciliation and compliance.</p>
        </div>
      </div>
    </div>
  </section>

