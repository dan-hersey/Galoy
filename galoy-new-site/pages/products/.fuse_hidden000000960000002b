  <!-- Code Example -->
  <section class="section">
    <div class="container container-sm">
      <h2 class="text-center mb-8">Simple to Integrate</h2>
      <div style="background: var(--galoy-grey); border-radius: var(--radius-lg); padding: var(--space-6); overflow-x: auto;">
        <pre style="color: #e5e7eb; margin: 0; font-family: 'IBM Plex Mono', monospace; font-size: 14px; line-height: 1.6;"><code><span style="color: #9ca3af;"># Create accounts</span>
<span style="color: #fbbf24;">mutation</span> {
  createAccount(input: {
    name: <span style="color: #34d399;">"Customer USD Wallet"</span>
    code: <span style="color: #34d399;">"customer-123-usd"</span>
    normalBalanceType: DEBIT
  }) {
    accountId
  }
}

<span style="color: #9ca3af;"># Record a transaction</span>
<span style="color: #fbbf24;">mutation</span> {
  postTransaction(input: {
    transactionId: <span style="color: #34d399;">"txn-456"</span>
    journalId: <span style="color: #34d399;">"main-journal"</span>
    entries: [
      { accountId: <span style="color: #34d399;">"customer-123-usd"</span>, amount: <span style="color: #60a5fa;">10000</span>, currency: <span style="color: #34d399;">"USD"</span>, direction: DEBIT }
      { accountId: <span style="color: #34d399;">"revenue-fees"</span>, amount: <span style="color: #60a5fa;">10000</span>, currency: <span style="color: #34d399;">"USD"</span>, direction: CREDIT }
    ]
  }) {
    transactionId
  }
}</code></pre>
      </div>
      <p class="text-center text-grey text-sm mt-4">GraphQL mutations for creating accounts and posting transactions</p>
    </div>
  </section>

